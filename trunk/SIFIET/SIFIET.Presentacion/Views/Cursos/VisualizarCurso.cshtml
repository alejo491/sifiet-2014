@model SIFIET.GestionProgramas.Datos.Modelo.CURSO

@{
    ViewBag.Title = "Detalles";
}

<h2>Visualizar</h2>

<div>
    <h4>Curso</h4>
    <hr />
    <dl>
        <dt>
            Identificador Curso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDENTIFICADORCURSO)
        </dd>

        <dt>
            Nombre Curso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMBRECURSO)
        </dd>
        <dt>
            Asignatura
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreAsignatura)
        </dd>

        <dt>
            Docente
        </dt>

