@using System.Web.UI.WebControls
@model SIFIET.GestionInfraestructura.Datos.Modelo.RECURSO

@{
    ViewBag.Title = "Nuevo Salon";
}


<div>

    @using (Html.BeginForm("RegistrarRecurso", "Recursos", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        Html.EnableClientValidation();


        <fieldset>
            <legend>Nuevo Recurso</legend>

            @Html.ValidationSummary(true)

            <div>
                Nombre :
                <div>
                    @Html.EditorFor(model => model.NOMBRERECURSO)
                    @Html.ValidationMessageFor(model => model.NOMBRERECURSO)
                </div>
            </div>
            <div>
                Tipo de Recurso :
                <div>
                    @Html.DropDownListFor(model => model.IDTIPORECURSO, ViewBag.ListaTiposRecurso as SelectList)
                    @Html.ValidationMessageFor(model => model.IDTIPORECURSO)

                </div>
            </div>
            <div>
                Facultad :
                <div>
                    @Html.DropDownListFor(model => model.IDENTIFICADORFACULTAD, ViewBag.ListaFacultades as SelectList)
                    @Html.ValidationMessageFor(model => model.IDENTIFICADORFACULTAD)

                </div>
            </div>
            @Html.HiddenFor(model => model.ESTADORECURSO, new { @Value = "Activo" })

            <div>
                <div>
                    <input type="submit" value="Guardar" onclick="return confirmacionAgregarSalon();" />
                    <input type="submit" value="Cancelar" onclick="return confirmSalirSalon();" />
                </div>
            </div>
        </fieldset>

    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
