@model SIFIET.GestionProgramas.Datos.Modelo.GRUPO_INVESTIGACION

@{
    ViewBag.Title = "Modificar Grupo Investigacion";
}

@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div>

        @ViewBag.Mensaje
    </div>
}



<div>

    @using (Html.BeginForm("ModificarGrupoInvestigacion", "GruposInvestigacion", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        <fieldset>
            <legend>Modificar Grupo de Investigacion</legend>

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.IDENTIFICADORGRUPOINVES)
            @Html.HiddenFor(model => model.EdicionOmodificacion, new { @Value = "modificacion" })            

            <div>
                Codigo:
                <div>
                    @Html.EditorFor(model => model.CODIGOGRUPOINVESTIGACION)
                    @Html.ValidationMessageFor(model => model.CODIGOGRUPOINVESTIGACION)
                </div>

            </div>
            <div>
                Nombre:
                <div>
                    @Html.EditorFor(model => model.NOMBREGRUPOINVESTIGACION)
                    @Html.ValidationMessageFor(model => model.NOMBREGRUPOINVESTIGACION)
                </div>

            </div>
            <div>
                Descripcion:
                <div>
                    @Html.TextAreaFor(model => model.DESCRIPCIONGRUPOINVESTIGACION)  
                    @Html.ValidationMessageFor(model => model.DESCRIPCIONGRUPOINVESTIGACION)
                </div>

            </div>

            <div>
                Departamento:
                <div>
                    @Html.DropDownListFor(model => model.IDENTIFICADORDEPARTAMENTO, ViewBag.ListaDepartamentos as SelectList)
                    @Html.ValidationMessageFor(model => model.IDENTIFICADORDEPARTAMENTO)                         
                </div>
            </div>
            <div>
                Director:
                <div>
                    @Html.DropDownListFor(model => model.IDENTIFICADORUSUARIO, ViewBag.ListaDocentes as SelectList)
                    @Html.ValidationMessageFor(model => model.IDENTIFICADORUSUARIO)                   
                </div>
            </div>
            <div>
                Estado :
                <div>
                    @if (Model.ESTADOGRUPOINVESTIGACION.Trim().Equals("Desactivado"))
                    {
                        @Html.Label("Activo")
                        @Html.RadioButtonFor(model => model.ESTADOGRUPOINVESTIGACION, "Activo")
                        @Html.Label("Inactivo")
                        @Html.RadioButtonFor(model => model.ESTADOGRUPOINVESTIGACION, "Inactivo")
                        @Html.ValidationMessageFor(model => model.ESTADOGRUPOINVESTIGACION)
                    }
                    else
                    {
                        @Html.Label(@Model.ESTADOGRUPOINVESTIGACION)
                        @Html.HiddenFor(model => model.ESTADOGRUPOINVESTIGACION)
                    }
                </div>
            </div>
            <div>
                <div>
                    <input type="submit" value="Editar" onclick="return confirmacionAgregarGrupo();" />
                </div>
                <div>
                    <input type="button" value="Cancelar" onclick="return confirmSalirGInvestigacion();" />
                </div>
            </div>
        </fieldset>

    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
