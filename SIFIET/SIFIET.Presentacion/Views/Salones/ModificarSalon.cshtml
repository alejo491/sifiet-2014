@model SIFIET.GestionInfraestructura.Datos.Modelo.SALON

@{
    ViewBag.Title = "Editar Salon";
}




<div>

    @using (Html.BeginForm("ModificarSalon", "Salones"))
    {
        @Html.AntiForgeryToken()



        <fieldset>
            <legend>Editar Curso</legend>

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.IDENTIFICADORSALON)
            <div>
                <div>
                    Nombre :
                    <div>
                        @Html.EditorFor(model => model.NOMBRESALON)
                        @Html.ValidationMessageFor(model => model.NOMBRESALON)
                    </div>
                </div>

                <div>
                    Facultad :
                    <div>
                        @Html.DropDownListFor(model => model.IDENTIFICADORFACULTAD, ViewBag.ListaFacultades as SelectList)
                        @Html.ValidationMessageFor(model => model.IDENTIFICADORFACULTAD)

                    </div>
                </div>
                        @if (Model.ESTADOSALON.Equals("Inactivo"))
                        {
                            <div>
                                Estado :
                                <div>
                       
                        
                                    Activo @Html.RadioButtonFor(model => model.ESTADOSALON, "Activo")
                                    Inactivo @Html.RadioButtonFor(model => model.ESTADOSALON, "Inactivo")
                                    @Html.ValidationMessageFor(model => model.ESTADOSALON)
                        
                        
                        
                                </div>
                            </div>
                        }
                        @if (!Model.ESTADOSALON.Equals("Inactivo"))
                        {
                            @Html.HiddenFor(model => model.ESTADOSALON, new { @Value = "Activo" })
                        }

                <div>
                    <input type="submit" value="Guardar" onclick="return confirmacionAgregarSalon();" />
                    <input type="submit" value="Cancelar" onclick="return confirmSalirSalon();" />
                </div>
            </div>
        </fieldset>

    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
