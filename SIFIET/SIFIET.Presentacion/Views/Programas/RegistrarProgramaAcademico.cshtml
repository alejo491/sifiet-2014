@model SIFIET.GestionProgramas.Datos.Modelo.PROGRAMA

@{
    ViewBag.Title = "Registrar";
}

<h2>Registrar Nuevo Programa Academico</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nuevo Programa</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CODIGOSNIESPROGRAMA)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CODIGOSNIESPROGRAMA)
            @Html.ValidationMessageFor(model => model.CODIGOSNIESPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NOMBREPROGRAMA)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NOMBREPROGRAMA)
            @Html.ValidationMessageFor(model => model.NOMBREPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DESCRIPCIONPROGRAMA)
        </div>
        <div class="editor-field">           
            @Html.TextAreaFor(model => model.DESCRIPCIONPROGRAMA)
            @Html.ValidationMessageFor(model => model.DESCRIPCIONPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FACULTAD.NOMBREFACULTAD)
        </div>
        <div class="editor-field">
            @Html.DropDownList("IDENTIFICADORFACULTAD", "Seleccione la facultad")
            @Html.ValidationMessageFor(model => model.IDENTIFICADORFACULTAD)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PERIODODURACIONPROGRAMA)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.PERIODODURACIONPROGRAMA, new SelectList(new String[] { "2 meses", "4 meses", "6 meses", "8 meses", "10 meses", "12 meses" }), "Seleccione el periodo de duracíon")
            @Html.ValidationMessageFor(model => model.PERIODODURACIONPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DURACIONPROGRAMA)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DURACIONPROGRAMA, new SelectList(new short[] { 6, 7, 8, 9, 10, 11, 12 }) ,"Seleccione la Duración")            
            @Html.ValidationMessageFor(model => model.DURACIONPROGRAMA)
        </div>
       
        <div class="editor-label">
            @Html.LabelFor(model => model.MODALIDADPROGRAMA)
        </div>
        <div class="editor-field">
            Presencial @Html.RadioButtonFor(model => model.MODALIDADPROGRAMA,"Presencial")
            Semipresencial @Html.RadioButtonFor(model => model.MODALIDADPROGRAMA, "Semipresencial")
            @Html.ValidationMessageFor(model => model.MODALIDADPROGRAMA)
           
        </div>       
        
        <div class="editor-label">
            @Html.LabelFor(model => model.JORNADAPROGRAMA)

        </div>
        <div class="editor-field">
            Diurna @Html.RadioButtonFor(model => model.JORNADAPROGRAMA,"Diurna")
            Nocturna @Html.RadioButtonFor(model => model.JORNADAPROGRAMA, "Nocturna")
            @Html.ValidationMessageFor(model => model.JORNADAPROGRAMA)
        </div>

        
        
        <div class="editor-label">
            @Html.LabelFor(model => model.ADMISIONPROGRAMA)
        </div>
        <div class="editor-field">
            Anual @Html.RadioButtonFor(model => model.ADMISIONPROGRAMA,"Anual")
            Semestral @Html.RadioButtonFor(model => model.ADMISIONPROGRAMA, "Semestral")
            @Html.ValidationMessageFor(model => model.ADMISIONPROGRAMA)
        </div>
      
        <div>
            <p>
                <a href="Index" onclick="return confirm('Confirma que desea cancelar la accion')">Cancelar</a>
                <input type="submit" value="Guardar" onclick="return comfirmacionPrograma()" />
            </p>
        </div>
    </fieldset>
}

<h3> @ViewBag.ResultadoOperacion </h3>