@{
    ViewBag.Title = "CargarDatos";
}



@model System.Data.DataSet
 
@if(Model == null){
    <h2>Cargar Datos</h2>
    using (Html.BeginForm("CargarInformacion", "Programa", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            Seleccionar Archivo
            <input type="file" name="archivo" /><br/>
            <input type="submit" value="Subir" name="Command" /><br />
        </div>
        <div>
        </div>
    }
}                    
else
{    
    <h2>DATOS CARGADOS</h2>
    <table>
        <tr>
            <th>Nombre</th><th>Jornada</th><th>Duración</th><th>Codigo SNIES</th>
        </tr>
        @for (int i = 0; i < Model.Tables[0].Rows.Count; i++)
     {
         <tr>
            <td>
                @Model.Tables[0].Rows[i][1].ToString()
            </td>
            <td>
                @Model.Tables[0].Rows[i][3].ToString()
            </td>
            <td>
                @Model.Tables[0].Rows[i][4].ToString()
            </td>
            <td>
                @Model.Tables[0].Rows[i][6].ToString()
            </td>        
        </tr>  
    }
    </table> 
}
          
<h3> @ViewBag.ResultadoOperacion </h3>

<div>
    @Html.ActionLink("Ir a inicio", "Index")
</div>
