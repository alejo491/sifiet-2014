<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SIFIET</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")">
    <!-- Estilos Propios -->
    <link rel="stylesheet" href="@Url.Content("~/Content/estilos.css")">    
    <!-- Estilos para los calendarios en los formularios -->
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")">
    <!-- Estilos para los calendarios en los formularios -->
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")">
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
    <!-- jQuery UI(necesario para el calendario de los formularios) -->
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
    <!-- funciones para la validacion-->
    <script src="/Scripts/funciones.js"></script>

    

</head>
<body>
    <div class="container">
        <header>
            <div class="info-usuario">
               @Html.Partial("_LogOnPartial")
            </div>
            <div class="top">

                <div class="logo">
                    <a href="http://www.unicauca.edu.co/" target="_blank"></a>
                </div>
                <div class="borde-redondo"></div>
                <div class="titulo">
                    <a href="Index">SIFIET</a><br>
                    Sistema de Información de la Facultad de Ingeniería Electrónica y Telecomunicaciones.
                </div>
                <div class="clear"></div>
            </div>
            <div class="bottom"></div>
        </header>        
        <section class="contenido">
            <div class="row">
                <nav class="col-md-3">
                    @Html.Partial("_menu")
                </nav>
                <div class="col-md-9">
                    <p class="breadcrumb">
                        Usted está en: <a href="index.html">Inicio</a>
                        @{
                            string path = HttpContext.Current.Request.Url.AbsolutePath;
                            string[] split = path.Split(new Char[] { '/' });
                            string urlBase = "";
                            foreach (string s in split)
                            {
                                urlBase = urlBase + s;
                                <a href="/@urlBase">@s</a>
                                <span>></span>
                            }
                        }
                    </p>
                    @RenderBody()
                </div>
            </div>
        </section>        
        <footer>
            <div class="contenedor">
                <div class="separador"></div>
                <div class="pie">
                    <div class="decoracion izq"></div>
                    <div class="decoracion der"></div>
                    <div class="clear"></div>
                </div>
            </div>
        </footer>
    </div>
    <script>

        $(document).ready(function () {
            $.datepicker.regional['es'] = {
                closeText: 'Cerrar',
                prevText: '',
                nextText: '',
                currentText: 'Hoy',
                monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
                dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb'],
                dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
                weekHeader: 'Sm',
                dateFormat: 'dd-mm-yy',
                firstDay: 1,
                isRTL: false,
                showMonthAfterYear: false,
                yearSuffix: ''
            };
            $.datepicker.setDefaults($.datepicker.regional['es']);

            $(function () {
                $("#datepicker").datepicker();
                $("#datepicker2").datepicker();
            });

        })
        
    </script>
</body>
</html>